<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/galleryLayout"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="@drawable/cloth"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.prudhvi.ntr" >
	<LinearLayout
		style="@style/common_titlebar" >
		<TextView
			android:text="@string/biography"
			style="@style/titlebar_text" />
		<LinearLayout
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:orientation="horizontal"
			android:gravity="right" >
			<ImageView
				style="@style/titlebar_icon" />
		</LinearLayout>
	</LinearLayout>
	<com.prudhvi.ntr.BioWheel
   		android:id="@+id/BioWheel"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
</LinearLayout>