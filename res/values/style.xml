<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="Parent" parent="@android:style/TextAppearance.Medium">
	<item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:background">#FFFFFF</item>
    <item name="android:layout_weight">0</item>
    <item name="android:orientation">vertical</item>
</style>
<style name="Heading" parent="@android:style/TextAppearance.Medium">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">#000000</item>
    <item name="android:typeface">serif</item>
</style>
<style name="Heading.Content"><!-- Inherited properties from Heading  -->
	<item name="android:layout_width">fill_parent</item>
	<item name="android:gravity">fill_horizontal</item>
	<item name="android:typeface">sans</item>
</style>
<style name="Images" parent="@android:style/TextAppearance.Medium">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:padding">10dip</item> 
</style>
<style name="menu_icon_text">
	<item name="android:layout_width">wrap_content</item>
	<item name="android:layout_height">wrap_content</item>
	<item name="android:gravity">center</item>
	<item name="android:textSize">16sp</item>
	<item name="android:textColor">#000000</item>
	<item name="android:shadowRadius">4</item> 
</style>
<style name="menu_icon_image">
	<item name="android:layout_width">wrap_content</item>
	<item name="android:layout_height">wrap_content</item>
	<item name="android:longClickable">false</item>
	<item name="android:scaleType">centerInside</item>
	<item name="android:paddingTop">25dip</item>
	<item name="android:paddingRight">20dip</item>
	<item name="android:paddingBottom">0dip</item>
	<item name="android:paddingLeft">20dip</item>
</style>
<style name="menu_icon_layout">
	<item name="android:layout_width">wrap_content</item> 
	<item name="android:layout_height">wrap_content</item>
	<item name="android:orientation">vertical</item>
</style>
<style name="common_titlebar">
	<item name="android:layout_width">fill_parent</item> 
	<item name="android:layout_height">55dip</item>
	<item name="android:orientation">horizontal</item>
	<item name="android:background">@drawable/titlebar_background</item>
</style>
<style name="titlebar_text">
	<item name="android:layout_width">wrap_content</item>
	<item name="android:layout_height">fill_parent</item>
	<item name="android:textColor">#FFFFFF</item>
	<item name="android:textStyle">bold</item>
	<item name="android:gravity">center_vertical</item>
	<item name="android:shadowColor">#0004BE</item>
</style>
<style name="titlebar_icon">
	<item name="android:layout_width">wrap_content</item>
	<item name="android:layout_height">125dip</item>
	<item name="android:layout_gravity">center_vertical</item>
	<item name="android:src">@drawable/ntr_fireicon</item>
	<item name="android:scaleType">centerInside</item>
</style>
<style name="audio_play_button">
	<item name="android:layout_width">wrap_content</item>
	<item name="android:layout_height">wrap_content</item>
	<item name="android:drawableTop">@drawable/listen</item>
	<item name="android:padding">7dip</item>
	<item name="android:textColor">#FFFFFF</item>
	<item name="android:background">@drawable/play_default_background</item>
</style>
<style name="audio_play_text">
	<item name="android:layout_width">wrap_content</item>
	<item name="android:layout_height">fill_parent</item>
	<item name="android:textColor">#000000</item>
	<item name="android:padding">7dip</item>
	<item name="android:textSize">16sp</item>
	<item name="android:gravity">center</item>
</style>
</resources>